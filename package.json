{
    "name": "@escral/form",
    "version": "0.0.0",
    "license": "MIT",
    "type": "module",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        },
        "./vue": {
            "types": "./dist/vue/index.d.ts",
            "import": "./dist/vue/index.js"
        },
        "./package.json": "./package.json"
    },
    "author": "Alexander Topalo <topaloalexander@gmail.com>",
    "files": [
        "dist"
    ],
    "scripts": {
        "release": "pnpm typecheck && pnpm build && pnpm new-version -s && npm publish --access public",
        "build": "tsdown",
        "dev": "tsdown --watch",
        "test": "vitest",
        "test:types": "vitest --typecheck.only",
        "typecheck": "tsc --noEmit"
    },
    "peerDependencies": {
        "vue": "^3.5.0"
    },
    "devDependencies": {
        "@escral/lint": "^2.0",
        "@escral/tsconfig": "^0.3.0",
        "@escral/versioning": "^1.5",
        "@types/node": "^22.10",
        "tsdown": "^0.15.9",
        "typescript": "^5.9.3",
        "vitest": "^4.0.1",
        "vue": "^3.5.25",
        "zod": "^4.1.13"
    },
    "engines": {
        "node": ">=18.0"
    },
    "packageManager": "pnpm@10.19.0"
}
